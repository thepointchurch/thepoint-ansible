{
        "agent": {
                "run_as_user": "cwagent"
        },
        "logs": {
                "logs_collected": {
                        "files": {
                                "collect_list": [
                                        {
                                                "file_path": "/var/log/auth.log",
                                                "log_group_class": "STANDARD",
                                                "log_group_name": "thepoint-web",
                                                "log_stream_name": "i{{ ansible_hostname }}_auth",
                                                "retention_in_days": -1
                                        },
                                        {
                                                "file_path": "/var/log/messages",
                                                "log_group_class": "STANDARD",
                                                "log_group_name": "thepoint-web",
                                                "log_stream_name": "i{{ ansible_hostname }}_messages",
                                                "retention_in_days": -1
                                        }
                                ]
                        }
                }
        }
}
